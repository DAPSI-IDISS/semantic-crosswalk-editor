# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# prevent breaking lists by space indents
[*.md]
indent_style = tab
trim_trailing_whitespace = false

# keep xml and ssb with tab indent style (currently the indentation of snippet insertion relies on tabs)
[*.{xml,ssb}]
indent_style = tab
indent_size = 4
