// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm", // mapped to yarn via settings npm.packageManager
            "script": "watch",
            "problemMatcher": [
              "$ts-webpack-watch",
              "$tslint-webpack-watch"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}